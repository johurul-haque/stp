{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@config": ["config"],
      "@utils": ["utils"],
      "@middlewares/*": ["middlewares/*"],
      "@helpers/*": ["helpers/*"],
      "@modules/*": ["modules/*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "files": ["src/interface/index.d.ts"]
}
